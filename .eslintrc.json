{
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:md/recommended"
  ],
  "rules": {
    "no-console": "error"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["*.md"],
      "parser": "markdown-eslint-parser",
      "rules": {
        "prettier/prettier": ["error", { "parser": "markdown" }]
      }
    }
  ]
}
